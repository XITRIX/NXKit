<brls:Box
    width="150"
    height="200"
    axis="column"
    alignItems="stretch"
    focusable="true"
    cornerRadius="12"
    highlightCornerRadius="15">

    <brls:Image
        id="image"
        width="auto"
        height="auto"
        grow="1"
        scalingType="fill"
        cornerRadius="12"
        backgroundColor="#00000030"/>

    <brls:Box
        detachedX="0"
        detachedY="0"
        width="142"
        height="200"
        axis="column"
        direction="rightToLeft"
        justifyContent="flexStart"
        alignItems="stretch">

        <brls:Image
            id="favorite_app_image"
            width="28"
            height="28"
            marginTop="8"
            alpha="0.75"
            image="@res/img/star.png"
            scalingType="stretch"/>

        <brls:Image
            id="current_app_image"
            width="28"
            height="28"
            marginTop="8"
            alpha="0.75"
            image="@res/img/play.png"
            scalingType="stretch"/>
    </brls:Box>

    <brls:Rectangle
        id="unactive_layer"
        detachedX="0"
        detachedY="0"
        width="150"
        height="200"
        color="#4A4A4AA0"
        cornerRadius="12"/>

    <brls:Box
        detachedX="0"
        detachedY="0"
        width="150"
        height="200"
        axis="column"
        justifyContent="flexEnd">

        <brls:Box
            width="auto"
            height="auto"
            minHeight="34"
            axis="column"
            justifyContent="center"
            backgroundColor="@theme/brls/backdrop"
            padding="8"
            cornerRadius="12">

            <brls:Label
                id="title"
                width="auto"
                height="auto"
                horizontalAlign="center"
                fontSize="12"/>

        </brls:Box>

    </brls:Box>

</brls:Box>
