<brls:Box
    id="backplate"
    width="auto"
    height="auto"
    backgroundColor="@theme/brls/backdrop">
    
    <brls:AppletFrame
        id="applet"
        width="80%"
        height="auto"
        backgroundColor="@theme/brls/background">
        
        <brls:TabFrame>
            
            <brls:Tab label="@i18n/streaming/options" >
                <OptionsTab />
            </brls:Tab>
            
            <brls:Tab label="@i18n/streaming/logout" >
                <LogoutTab />
            </brls:Tab>
            
        </brls:TabFrame>
    
    </brls:AppletFrame>
    
</brls:Box>
