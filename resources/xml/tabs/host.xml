<brls:Box
    width="auto"
    height="auto">

    <brls:ScrollingFrame
        width="auto"
        height="auto"
        axis="column"
        alignItems="stretch"
        grow="1.0" >
        
        <brls:Box
            width="10000"
            height="auto"
            axis="column"
            alignItems="stretch"
            paddingTop="@style/brls/tab_details/padding_top"
            paddingRight="@style/brls/tab_details/padding_right"
            paddingBottom="@style/brls/tab_details/padding_bottom"
            paddingLeft="@style/brls/tab_details/padding_left">
            
            <brls:Header
                id="header"
                title="Status: Unactive"/>
                
            <brls:DetailCell
                id="connect"/>
                
            <brls:DetailCell
                id="remove"
                lineTop="1px"
                marginTop="24"/>
                  
        </brls:Box>

    </brls:ScrollingFrame>

</brls:Box>
